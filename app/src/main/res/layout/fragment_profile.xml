<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.ProfileFragment">

    <RelativeLayout
            android:id="@+id/profile_header_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp">

        <TextView
                android:text="@string/carlos_henrique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_account"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                tools:ignore="RelativeOverlap"
                android:layout_centerVertical="true" />

        <ImageView
                android:id="@+id/add_img"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="60dp"
                android:src="@drawable/ic_add" />

        <ImageView
                android:id="@+id/menu_img"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_menuhamburguer" />

    </RelativeLayout>
    <ImageView
            android:id="@+id/post_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_header_layout"
            />

    <RelativeLayout
            android:id="@+id/data_profile_layout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/post_img">


        <TextView
                android:text="1115"
                android:id="@+id/qtde_publicacoes5"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:ignore="RelativeOverlap"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_width="58dp"
                android:layout_toEndOf="@+id/qtde_publicacoes4"
                android:layout_marginStart="104dp"
                android:layout_marginTop="25dp" />

        <TextView
                android:text="Seguindo"
                android:id="@+id/publicacoes3"
                android:textSize="20sp"
                android:textColor="@color/black"
                tools:ignore="RelativeOverlap"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/publicacoes2"
                android:layout_marginStart="71dp"
                android:layout_marginTop="60dp" />

        <TextView
                android:text="Seguidores"
                android:id="@+id/publicacoes2"
                android:textSize="20sp"
                android:textColor="@color/black"
                tools:ignore="RelativeOverlap"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/publicacoes"
                android:layout_marginStart="59dp"
                android:layout_marginTop="60dp" />

        <TextView
                android:text="2560"
                android:id="@+id/qtde_publicacoes4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:ignore="RelativeOverlap"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_width="58dp"
                android:layout_toEndOf="@+id/qtde_publicacoes"
                android:layout_marginStart="121dp"
                android:layout_marginTop="25dp" />

        <TextView
                android:text="Publicações"
                android:id="@+id/publicacoes"
                android:textSize="20sp"
                android:textColor="@color/black"
                tools:ignore="RelativeOverlap"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/profile_pic"
                android:layout_marginStart="167dp"
                android:layout_marginTop="60dp" />

        <TextView
                android:text="35"
                android:id="@+id/qtde_publicacoes"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:ignore="RelativeOverlap"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_toEndOf="@+id/profile_pic"
                android:layout_marginStart="208dp"
                android:layout_marginTop="25dp" />

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/profile"
                android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_below="@+id/data_profile_layout">

        <TextView
                android:text="CarlosHSantos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_account4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                tools:ignore="RelativeOverlap" />

        <TextView
                android:text="Analista de sistemas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_account3"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                tools:ignore="RelativeOverlap"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/id_account4" />

    </RelativeLayout>

    <Button
            android:text="Editar perfil"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/button_perfil"
            android:layout_below="@+id/profile_layout"
            android:backgroundTint="@color/white"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_perfil"
            android:id="@+id/buttons_layout">

        <Button
                android:text="Ferramenta de anúncios"
                android:layout_width="228dp"
                android:layout_height="48dp"
                android:id="@+id/button2"
                android:layout_below="@+id/profile_layout"
                android:backgroundTint="@color/white"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

        <Button
                android:text="insights"
                android:layout_width="244dp"
                android:layout_height="48dp"
                android:id="@+id/button3"
                android:layout_below="@+id/profile_layout"
                android:backgroundTint="@color/white"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

        <Button
                android:text="Adicionar loja"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/button4"
                android:layout_below="@+id/profile_layout"
                android:backgroundTint="@color/white"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relativeLayout1"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_below="@+id/buttons_layout">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>